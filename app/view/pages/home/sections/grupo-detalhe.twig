{% extends "layout/main-clean.twig" %}

{% block body %}
    <style>
        #idiomas legend {
            display: block;
            padding: 0;
            width: auto;
            margin-bottom: 20px;
            font-size: 21px;
            line-height: inherit;
            color: #333;
            border: 0;
            border-bottom: 1px solid #e5e5e5;
        }
    </style>
    <div style="height: 950px;">
        <div class="col-lg-12">
            <div>
                <div class="col-lg-12 text-center">
                    <h1>{{ usuario.nome }}</h1>
                </div>

                <div class="col-lg-12" style="margin-bottom: 20px; min-height: 441px;">
                    <div class="col-lg-12" style="font-size: 15px;">
                        {{ usuario.curriculo | raw }}
                    </div>
                </div>

                <div class="col-lg-3">
                    <div id="idiomas">
                        <fieldset>
                            <legend>Idiomas</legend>
                            {% for idioma in idiomas %}
                                <img src="{{ idioma.imagem }}" alt="" title="{{ idioma.nome }}" width="20" height="20">
                            {% endfor %}
                        </fieldset>
                    </div>
                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-7 social-icons">
                    <a href="{{ usuario.curriculolotes }}" target="_blank" title="CurrÃ­culo Lattes"><i class="fa fa-file-text-o" aria-hidden="true"></i></a>
                    <a title="{{ usuario.email }}"><i class="fa fa-envelope-o" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}