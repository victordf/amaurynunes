<section id="home">
    <div class="home-pattern"></div>
    <div id="main-carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for bcr in carrossel %}
                <li data-target="#main-carousel" data-slide-to="0" {% if bcr.bcrprincipal != 0 %}class="active"{% endif %}"></li>
            {% endfor %}
        </ol><!--/.carousel-indicators-->
        <div class="carousel-inner">
            {% for bcr in carrossel %}
                <div class="item {% if bcr.bcrprincipal != 0 %}active{% endif %}" teste="{{ bcr.bcrimg }}" style="max-height: 966px !important; background-image: url({{ RAIZ }}{{ bcr.bcrimg }})">
                    <div class="carousel-caption">
                        <div>
                            <h2 class="heading animated bounceInDown">{{ bcr.bcrtitulo }}</h2>
                            <p class="animated bounceInUp">{{ bcr.bcrsubtitulo }}</p>
                            <a class="btn animated fadeIn btn-slider-carrossel" href="javascript:void(iniciaSite())"><i class="fa fa-chevron-down fa-5x" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div><!--/.carousel-inner-->

        <a class="carousel-left member-carousel-control hidden-xs" href="#main-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
        <a class="carousel-right member-carousel-control hidden-xs" href="#main-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
    </div>

    <script>
        function iniciaSite(){
            $('body').scrollspy({target: '#navbar-topo'});
        }
    </script>

</section><!--/#home-->