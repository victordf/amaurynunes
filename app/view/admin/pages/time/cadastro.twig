{% extends "admin/layout/main.twig" %}

{% block style %}
    <style>
        textarea {
            margin-right: 0px !important;
            margin-left: 0px !important;
        }

        .hide {
            display: none;
        }

        .span-idiomas {
            display: inline-block;
            width: 20% !important;
            float: left !important;
            padding: 6px 12px !important;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cadastro de Membros do time</h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Nosso time
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="well col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2">
                <form method="post" action="{{ RAIZ }}admin/nossotime/" class="form-horizontal" id="form-artigos">
                    <input type="hidden" id="id" name="id" value="">

                    <div class="form-group">
                        <label for="" class="col-lg-2 control-label">Nome:</label>
                        <div class="col-lg-10">
                            <input type="text" name="nome" id="nome" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="col-lg-2 control-label">Função:</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" name="funcao" id="funcao">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="col-lg-2 control-label">Resumo:</label>
                        <div class="col-lg-10">
                            <textarea name="resumo" id="resumo" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="col-lg-2 control-label">Currículo</label>
                        <div class="col-lg-10">
                            <textarea name="curriculo" id="curriculo" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="col-lg-2 control-label">Idiomas:</label>
                        <div class="col-lg-10">
                            {% for idioma in idiomas %}
                                {#<button class="btn btn-default idiomas" type="button" data-id="{{ idioma.id }}">#}
                                <span class="form-control span-idiomas">
                                    <input type="checkbox" class="chkIdiomas" value="{{ idioma.id }}" id="idioma_{{ idioma.id }}" name="idioma[]">
                                    {{ idioma.nome }}
                                </span>
                                {#</button>#}
                            {% endfor %}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="control-label col-lg-2">Foto:</label>
                        <div class="col-lg-10">
                            <input type="file" class="form-control" name="foto" id="foto">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12 text-center">
                            <input type="submit" class="btn btn-success" value="Salvar">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block jsCode %}
    <script>
        $(document).ready(function(){

        });
    </script>
{% endblock %}