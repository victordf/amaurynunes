{% extends "admin/layout/main.twig" %}

{% block style %}
    <style>
        textarea {
            margin-right: 0px !important;
            margin-left: 0px !important;
        }

        .hide {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cadastro de Artigos</h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> Dashboard
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="well col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2">
                <form method="post" action="{{ RAIZ }}admin/artigo/cadastro" class="form-horizontal" id="form-artigos" enctype="multipart/form-data">
                    <input type="hidden" id="id" name="id" value="">

                    <div class="form-group">
                        <label for="" class="control-label col-lg-2">Título</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="titulo" name="titulo">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="control-label col-lg-2">Resumo</label>
                        <div class="col-lg-10">
                            <textarea name="resumo" id="resumo" rows="5" class="form-control"></textarea>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="" class="control-label col-lg-2">Texto</label>
                        <div class="col-lg-10">
                            <textarea class="editor" name="texto" id="texto"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="" class="col-lg-2 control-label">Público</label>
                        <div class="col-lg-10 text-left">
                            <input type="checkbox" id="publico" name="publico" value="1">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12 text-center">
                            <input type="submit" class="btn btn-success" value="Salvar">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block jsCode %}
    <script>
        $(document).ready(function(){

        });
    </script>
{% endblock %}